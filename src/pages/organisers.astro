---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Scientific and Organizing Committee – QEpi 2026</title>
  </head>
  <body class="font-sans text-gray-900 bg-gray-50">
    <Navbar />

    <!-- Hero -->
    <section 
      class="relative pt-32 pb-20 text-white text-center bg-cover bg-center bg-no-repeat" 
      style="background-image: url('/Ulm2.jpg');"
    >
      <div class="absolute inset-0 bg-black/50"></div> <!-- semi-transparent overlay -->
      <div class="relative z-10">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Scientific and Organizing Committee</h1>
        <p class="text-base md:text-lg max-w-2xl mx-auto px-6">
          Meet the scientific advisory board behind the organisation of <strong>QEpi 2026</strong>
        </p>
      </div>
    </section>

    <!-- Chair Organizer -->
    <section class="max-w-3xl mx-auto py-16 px-6 text-center">
    <a href="/committee/mirko" class="block">
      <div class="bg-white shadow-lg rounded-2xl p-6 hover:shadow-xl transition inline-block">
        <img src="/committee/mirko.jpg" alt="Chair Organizer"
             class="w-40 h-40 mx-auto rounded-full object-cover mb-4" />
        <h2 class="text-2xl font-semibold text-gray-900">Dr. Mirko Rossini</h2>
        <p class="text-gray-600">University of Ulm</p>
        <p class="mt-2 text-sm text-gray-500">Conference Chair</p>
      </div>
    </a>
    </section>

    <!-- Ulm Scientific Board -->
    <section class="max-w-6xl mx-auto py-12 px-6">
      <h2 class="text-2xl font-bold text-center mb-8">Ulm Scientific Board</h2>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <a href="/committee/joachim" class="block">
        <div class="bg-white shadow-lg rounded-2xl p-6 text-center hover:shadow-xl transition">
          <img src="/committee/joachim.webp" alt="Prof. Joachim Ankerhold"
               class="w-32 h-32 mx-auto rounded-full object-cover mb-4" />
          <h3 class="text-xl font-semibold">Prof. Joachim Ankerhold</h3>
          <p class="text-gray-600">University of Ulm</p>
        </div>
      </a>

      <a href="/committee/ole" class="block">
        <div class="bg-white shadow-lg rounded-2xl p-6 text-center hover:shadow-xl transition">
          <img src="/committee/ole.webp" alt="Prof. Ole Ammerpohl"
               class="w-32 h-32 mx-auto rounded-full object-cover mb-4" />
          <h3 class="text-xl font-semibold">Prof. Ole Ammerpohl</h3>
          <p class="text-gray-600">University of Ulm</p>
        </div>
      </a>

      <a href="/committee/sven" class="block">
        <div class="bg-white shadow-lg rounded-2xl p-6 text-center hover:shadow-xl transition">
          <img src="/committee/sven.jpg" alt="Prof. Sven Rau"
               class="w-32 h-32 mx-auto rounded-full object-cover mb-4" />
          <h3 class="text-xl font-semibold">Prof. Sven Rau</h3>
          <p class="text-gray-600">University of Ulm</p>
        </div>
      </a>
      </div>
    </section>

    <!-- International Organizers -->
    <section class="max-w-4xl mx-auto py-12 px-6">
      <h2 class="text-2xl font-bold text-center mb-8">International Scientific Board</h2>
      <div class="grid gap-8 sm:grid-cols-2">
      <a href="/committee/rosa" class="block">
        <div class="bg-white shadow-lg rounded-2xl p-6 text-center hover:shadow-xl transition">
          <img src="/committee/rosa.jpg" alt="Prof. Rosa Di Felice"
               class="w-32 h-32 mx-auto rounded-full object-cover mb-4" />
          <h3 class="text-xl font-semibold">Prof. Rosa Di Felice</h3>
          <p class="text-gray-600">University of Southern California, Los Angeles</p>
        </div>
      </a>

      <a href="/committee/constantinos" class="block">
        <div class="bg-white shadow-lg rounded-2xl p-6 text-center hover:shadow-xl transition">
          <img src="/committee/costas.webp" alt="Prof. Constantinos Simserides"
               class="w-32 h-32 mx-auto rounded-full object-cover mb-4" />
          <h3 class="text-xl font-semibold">Prof. Constantinos Simserides</h3>
          <p class="text-gray-600">National and Kapodistrian University of Athens</p>
        </div>
      </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white text-center py-6">
      <p>QEpi 2026 – Quantum Effects on Epigenetic Regulation in Living Systems</p>
    </footer>
  </body>
</html>
